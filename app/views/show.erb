<h1><%= @recipe.name %> </h1>
<h3>Ingredients:</h3>
  <%= @recipe.ingredients %>
<h3>Cook Time:</h3>
  <%= @recipe.cook_time %> minutes

<!-- delete action -->

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete">
</form>
