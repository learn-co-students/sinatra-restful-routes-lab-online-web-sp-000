<h1><%=@recipe.name%></h1>

<h3>Ingredients</h3>
<p><%=@recipe.ingredients%></p>

<h3>Cook Time</h3>
<p><%=@recipe.cook_time%> minutes</p>

<form action="/recipes/<%=@recipe.id%>" method="POST">
  <input type="hidden" name="_method" value="DELETE" />
  <input type="submit" id="delete" value="Delete Recipe" />
</form>

