<h2><%= @recipe.name %></h2>

<p><%= @recipe.ingredients %></p>
<p><%= @recipe.cook_time %></p>

<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="delete" />
  <button type="submit" id="delete" style="color: red;">Delete</button>
</form>
