<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH"/>
  Recipe Name: <input type="text" value="<%= @recipe.name %>" name="name"/><br>
  Ingredients: <input type="text" value="<%= @recipe.ingredients %>" name="ingredients"/><br>
  Cook Time: <input type="text" value="<%= @recipe.cook_time %>" name="cook_time"/>
  <input type="submit" value="Submit"/>
</form>