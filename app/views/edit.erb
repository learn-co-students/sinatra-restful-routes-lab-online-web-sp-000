<h2>Edit your <%= @recipe.name %> recipe</h2>

<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH" />
  <label for="name">Name: </label>
  <input type="text" name="name" id="name" value="<%= @recipe.name %>" /><br />

  <label for="ingredients">Ingredients: </label>
  <input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"/><br />

  <label for="cook_time">Cook Time: </label>
  <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"/><br />

  <button
    type="submit"
    id="submit"
    style="margin-top: 10px; padding: 10px 20px; border-radius: 10px;"
  >
    Submit
  </button>
</form>