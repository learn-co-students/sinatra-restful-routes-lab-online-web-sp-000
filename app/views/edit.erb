<h2><%= @recipe.name %></h2>
<h3><%= @recipe.ingredients %></h3>
<h3><%= @recipe.cook_time %></h3>

<form action="/recipes/<%= @recipe.id %>/edit" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="name">Name: 
        <input type="text" name="name" value="<%= @recipe.name %>">
    </label>
    <label for="ingredients">Ingredients: 
        <input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
   </label>
    <label for="ingredients">Cook Time: 
        <input type="text" name="cook_time" value="<%= @recipe.cook_time %>">
    </label>
    <input type="submit">
</form>