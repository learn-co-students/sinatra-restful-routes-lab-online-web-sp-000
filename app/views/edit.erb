<h1>Edit <%= @recipe.name %> here: </h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="name" value="<%= @recipe.ingredients %>"></p>
  <p>Cook time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <p>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <input type="submit" value="Edit">
</form>

