<form method="post" action="/recipes/<%= @recipe.id %>">
  
  
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="name"><%= @recipe.name %>
  <input type="text" name="ingredients"><%= @recipe.ingredients %>
  <input type="text" name="cook_time"><%= @recipe.cook_time %>
  <input type="submit" value="submit">
  
</form>