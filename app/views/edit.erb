<h1>Current Recipe</h1>

<h2><%= @recipe.name %></h2>
<h3><%= @recipe.ingredients %></h3>
<h3><%= @recipe.cook_time %></h3>

<h1>Edit Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h3>Recipe Name: </h3><input type="text" name="name">
  <h3>Recipe Ingredients: </h3><input type="text" name="ingredients">
  <h3>Recipe Cook Time: </h3><input type="text" name="cook_time">
  <input type="submit" value="submit">
</form>
