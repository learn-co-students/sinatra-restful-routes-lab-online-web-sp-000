<h1>Edit Recipe</h2>
<h2><%= @recipe.ingredients %></h2>
<form method="POST" action="/recipes/<%= params[:id] %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  New Name: <input type="text" name="name">
  New Ingredients: <input type="text" name="ingredients">
  New Cook Time: <input type="text" name="cook_time">
  <input type="submit" id="submit">
</form>