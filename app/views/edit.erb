<h1>Edit A Recipe!</h1>
<form method="POST" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h3>Recipe Name: <input type="text" name="name" id="name" value="<%= @recipe.name %>"></h3>
    <h3>Recipe Ingredients: <input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"></h3>
    <h3>Recipe Cook Time: <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"></h3>
    <input type="submit" value="Submit Edit">
</form>