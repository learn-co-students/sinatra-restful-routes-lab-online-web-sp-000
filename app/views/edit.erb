<h1>Edit <%= @edit_recipe.name %></h1>

<form action="/recipes/<%= @edit_recipe.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="text" name="name" placeholder="<%= @edit_recipe.name %>">
    <input type="text" name="ingredients" placeholder="<%= @edit_recipe.ingredients %>">
    <input type="text" name="cook_time" placeholder="<%= @edit_recipe.cook_time %>">
    <input type="submit" value="submit">
</form>