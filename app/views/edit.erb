<form action="/recipes/<%=@recipe.id%>" method= "POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <ul>
      <li>
    <label for="name">Name:</label>
    <input type="text" id="name" name="recipe[name]" value="<%=@recipe.name%>">
      </li>
      <li>
    <label for="ingredients">Ingredients:</label>
    <input type="text" id="ingredients" name="recipe[ingredients]" value="<%=@recipe.ingredients%>"><br>
    </li>
    <li>
    <label for="cook_time">Cook Time:</label>
    <input type="text" id="cook_time" name="recipe[cook_time]" value="<%=@recipe.cook_time%>"><br>
    </li>
    </ul>
    <button type="submit" id="submit">SUBMIT</button>
</form>