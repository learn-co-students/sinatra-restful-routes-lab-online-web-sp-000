
<p> <%= @recipe_object.name %> </p>
<p> <%= @recipe_object.ingredients %> </p>
<p> <%= @recipe_object.cook_time %> </p>

<form action="/recipes/<%= @recipe_object.id%>" method="post">

   <input id="hidden" type="hidden" name="_method" value="PATCH">

   <label for="name">Recipe Name</label>
   <input type="text" id="name" name="name">

   <label for="ingredients">Recipe Ingredients</label>
   <input type="text" id="ingredients" name="ingredients">

   <label for="cook_time">Recipe Cook Time</label>
   <input type="text" id="cook_time" name="cook_time">

   <input type="submit" id="submit">

</form>
