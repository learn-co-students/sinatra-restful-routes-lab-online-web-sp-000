<form method="post" action="/recipes/<%= @recipe.id %>">
<input type="hidden" id="hidden" name="_method" value="patch">
    <p>Recipe Name: <input type="text" name="recipe[name]" id="name" value=<%= @recipe.name %>></p>
    <p>Ingredients: <input type="text" name="recipe[ingredients]" id="ingredients" value=<%= @recipe.ingredients %>></p>
    <p>Cook Time: <input type="text" name="recipe[cook_time]" id="cook_time" value=<%= @recipe.cook_time %>></p>
    <input type="submit" id="submit" value="Save Changes">
</form>
