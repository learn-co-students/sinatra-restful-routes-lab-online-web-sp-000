<h3>Recipe: <%= @recipe.ingredients %></h3>
<h3>Edit Recipe Form</h3>

<form action="/recipes/<%= @recipe.id %>/edit" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label for="recipe_name">Recipe Name:</label>
  <input id="recipe_name" type="text" name="name" value="">
  
  <label for="recipe_ingredients">Recipe Ingredients:</label>
  <input id="recipe_ingredients" type="text" name="ingredients" value="">
  
  <label for="recipe_cook_time">Recipe Cook Time:</label>
  <input id="recipe_cook_time" type="text" name="cook_time" value="">
  
  <input type="submit" value="submit">
</form>