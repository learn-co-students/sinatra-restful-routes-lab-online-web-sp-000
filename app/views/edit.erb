<h1>Edit that Recipe!</h1> 

<h3><%= @recipe.name %></h3>
<p><%= @recipe.ingredients %></p>
<p><%= @recipe.cook_time %></p>

<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <p>Edit Name: <input type="text" name="name" id="name"></p>
    <p>Edit Ingredients: <input type="text" name="ingredients" id="ingredients"></p>
    <p>Edit Cook Time: <input type="text" name="cook_time" id="cook_time"></p>
    <input type="submit" id="submit">
</form>