<form action='/recipes/<%= @recipe.id %>' method='POST'>
<input id="hidden" type="hidden" name="_method" value="patch">
<input type='text' name='name' placeholder='Recipe Name' <%= @recipe.name %>>
<input type='text' name='ingredients' placeholder='Ingredients' <%= @recipe.ingredients %>>
<input type='text' name='cook_time' placeholder='Cook Time' <%= @recipe.cook_time %>>
<input type='submit' value='submit'>
</form>