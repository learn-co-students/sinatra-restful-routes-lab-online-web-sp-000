<h2>Edit Your <%= @recipe.name %> Recipe Here</h2>
<h3>Your current recipe...</h3>
<h4><%= @recipe.name %> Recipe!</h3>
<h5><%= @recipe.cook_time %></h4>
<p><%= @recipe.ingredients %></p>
<form method = "post" action "/recipes/<%= @recipe.id %>/edit>
  <input type = "hidden" id = "hidden" name = "_method" value = "patch">
  <p>Recipe: <input type = "text" name = "name"></p>
  <p>Ingredient: <input type = "text" name = "ingredients"></p>
  <p>Cook Time: <input type = "text" name = "cook_time"></p>
  <input type = "submit" name = "submit">
</form>