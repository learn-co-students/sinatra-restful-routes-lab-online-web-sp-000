<h1>Edit The Recipe</h1>
<form action="/recipes/<%=@recipe.id%>" method="post">
	<input type="hidden" id="hidden" name="_method" value="patch">
	<label for="name">Dish Name:</label>
	<input type="text" id="name" name="name" value="<%= @recipe.name%>"><br><br>
	<label for="ingredients">Ingredients:</label><br>
	<textarea id="ingredients" name="ingredients" cols="30" rows="10"><%= @recipe.ingredients %></textarea><br><br>
	<label for="cook_time">Cook Time:</label>
	<input type="number" id="cook_time" name="cook_time" value="<%= @recipe.cook_time%>"><br><br>
	<input type="submit" value="submit">
</form>