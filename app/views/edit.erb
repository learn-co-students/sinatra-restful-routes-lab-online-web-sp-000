<form action="/recipes/<%= @recipe.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="name">Recipe Name:</label> <input id="name" type="text" name="name"><%= @recipe.name %></input><br>
    <label for="ingredients">Ingredients:</label> <input id="ingredients" type="text" name="ingredients"><%= @recipe.ingredients %></input><br>
    <label for ="cook_time">Cook Time:</label> <input id="cook_time" type="text" name="cook_time"><%= @recipe.cook_time %></input><br>
    <button type="submit" value="submit"></button>
</form>