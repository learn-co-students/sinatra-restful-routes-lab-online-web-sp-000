<%= @recipe.name %>
<%= @recipe.ingredients %>
<%= @recipe.cook_time %>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  New Name: <input type="text" name="name">
  New Ingredients: <input type="text" name="ingredients">
  New Cook Time: <input type="text" name="cook_time">
  <input type="submit">
</form>
