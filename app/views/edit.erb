<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <%= @recipe.name %><input type="text" id="name" name="recipe[name]"><br>
    <%= @recipe.ingredients %><input type="text" id="ingredients" name="recipe[ingredients]"><br>
    <%= @recipe.cook_time %><input type="text" id="cook_time" name="recipe[cook_time]"><br>
    <input type="submit" value="Make Changes"
</form>